{
  "variables": {
    ".Version": "gemini"
  },
  "builders": [{
    "type": "docker",
    "image": "node:0.10",
    "run_command": ["-d", "-i", "-t", "{{.Image}}", "node", "/app/index.js"],
    "export_path": "target/bigboards-hive_{{ .Version }}.tgz"
  }],
  "provisioners": [{
    "type": "file",
    "source": "server/",
    "destination": "/app"
  }]
}